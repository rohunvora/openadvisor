{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "noEmit": false,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@openadvisor/database": [
        "../../packages/database/src"
      ],
      "@openadvisor/database/*": [
        "../../packages/database/src/*"
      ],
      "@openadvisor/shared": [
        "../../packages/shared/src"
      ],
      "@openadvisor/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/database/src/**/*",
    "../../packages/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}